<%= image_tag @recipe.image.url(:medium, class: "recipe_image") %>
<h1>
  <%= @recipe.title %>
</h1>
<p>
  <%= @recipe.description %>
</p>
<%= link_to "Back", root_path, class: "btn btn-outline-primary" %>
<%= link_to "Edit", edit_recipe_path, class: "btn btn-outline-warning" %>
<%= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>